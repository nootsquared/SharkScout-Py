# pit scouting screen
<PitScreen>:
    name: "pits"
    canvas.before:
        Color:
            rgba: 32/255, 32/255, 32/255, 1
        Rectangle:
            pos: self.pos
            size: self.size

    MDScrollView:
        do_scroll_x: False
        do_scroll_y: True
