            spacing: 20
            halign: "center"
            valign: "center"
            orientation: 'vertical'

            MDLabel:
                adaptive_size: True
                text: "Pit Scouting"
                theme_font_name: "Custom"
                font_name: "Roboto1"
                theme_text_color: "Custom"
                text_color: [1, 1, 1, 1]
                theme_font_size: "Custom"
                font_size: "25sp"
                pos_hint: {'center_x': .5, 'center_y': .8}
                padding: [0, 30, 0, 0]

            MDButton:
                style: "outlined"
                pos_hint: {'center_x': 0.5, 'center_y': 0.7}
                theme_width: "Custom"
                theme_height: "Custom"
                height: "46dp"
                width: "100dp"
                radius: [5, 5, 5, 5]
                theme_line_color: "Custom"
                line_color: [2/255, 136/255, 209/255, 1]
                theme_bg_color: "Custom"
                md_bg_color: [0.95, 0.95, 0.95, .05]
                padding: [30, 20, 30, 20]
                on_release: root.manager.current = 'home'

                MDButtonText:
                    text: "<-- BACK"
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    theme_text_color: "Custom"
                    text_color: [1, 1, 1, 1]
                    theme_font_size: "Custom"
                    theme_font_name: "Custom"
                    font_name: "Roboto"
                    theme_font_size: "Custom"
                    font_size: "16sp"
                    halign: 'center'
                    valign: 'center'

